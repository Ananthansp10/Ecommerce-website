<div class="container mx-auto px-4 py-8">
    <!-- Filters Section -->
    <div class="flex flex-col md:flex-row justify-between items-center mb-6">
        <div class="flex space-x-4">
            <select class="border rounded-lg p-2" onchange="findCategory(this)">
                <option value="">Select Category</option>
                <option value="mobile">Mobile</option>
                <option value="accessory">Accessories</option>
            </select>
            <select class="border rounded-lg p-2">
                <option value="">Sort by Price</option>
                <option value="low-to-high">Low to High</option>
                <option value="high-to-low">High to Low</option>
            </select>
            <select class="border rounded-lg p-2">
                <option value="">Select Brand</option>
                <option value="brand1">Brand 1</option>
                <option value="brand2">Brand 2</option>
                <option value="brand3">Brand 3</option>
            </select>
        </div>
    </div>

    <!-- Product List Section -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        {{#if products}}
        {{#each products}}
        <div class="bg-gray-200 border rounded-lg shadow-lg p-4 flex flex-col" onclick="viewproduct('{{this._id}}')">
            <div class="flex justify-center w-full h-48 mb-4">
                <img class="object-contain h-full max-h-48" src="{{this.images.[0]}}" alt="Product Image">
            </div>
            <h2 class="text-lg font-semibold">{{this.name}}</h2>
            <p class="text-gray-600 mb-2">{{this.price}}</p>
            <div class="flex justify-between items-center mt-auto">
                <div class="flex space-x-2">
                    <button class="bg-blue-500 text-white py-2 px-4 rounded-lg">Add to Cart</button>
                    <button class="bg-green-500 text-white py-2 px-4 rounded-lg">Buy Now</button>
                </div>
                <a class="text-black hover:text-red-600">
                    <i class="fas fa-heart"></i>
                </a>
            </div>
        </div>
        {{/each}}
        {{/if}}
    </div>
</div>

<script>
    function findCategory(value){
       window.location.href=`/product/productsByCategory/${value.value}`
    }

     function viewproduct(Id){
      window.location.href=`/product/productPage/${Id}`
   }
</script>
