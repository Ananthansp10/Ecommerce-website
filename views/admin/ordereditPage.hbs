<div class="p-8 bg-gray-200 max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-700 mb-6">Edit Order</h2>

    <!-- Edit Order Form -->
    <form class="space-y-6">
        <!-- Customer Name -->
        <div>
            <label for="customerName" class="block text-sm font-medium text-gray-700">Customer Name</label>
            <input type="text" id="customerName" value="John Doe" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Product -->
        <div>
            <label for="product" class="block text-sm font-medium text-gray-700">Product</label>
            <input type="text" id="product" value="Samsung Mobile" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Quantity -->
        <div>
            <label for="quantity" class="block text-sm font-medium text-gray-700">Quantity</label>
            <input type="number" id="quantity" value="2" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Total Price -->
        <div>
            <label for="totalPrice" class="block text-sm font-medium text-gray-700">Total Price</label>
            <input type="text" id="totalPrice" value="Rs. 1,00,000" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Status -->
        <div>
            <label for="status" class="block text-sm font-medium text-gray-700">Status</label>
            <select id="status" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <option>Shipped</option>
                <option>Processing</option>
                <option>Cancelled</option>
                <option>Delivered</option>
            </select>
        </div>

        <!-- Save and Cancel Buttons -->
        <div class="flex justify-end space-x-4">
            <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded-full hover:bg-gray-600">Cancel</button>
            <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-full hover:bg-blue-600">Save Changes</button>
        </div>
    </form>
</div>
