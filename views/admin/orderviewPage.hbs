<body class="bg-gray-100 p-8">

  <!-- Order Details Header -->
  <div class="max-w-5xl mx-auto bg-white shadow-lg rounded-lg p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Order Details - #12345</h2>

    <!-- Customer Info and Order Summary -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <!-- Customer Info -->
      {{#if userdata}}
      <div class="bg-gray-50 p-4 rounded-lg shadow-sm">
        <h3 class="text-lg font-semibold text-gray-700">Customer Information</h3>
        <p class="text-gray-600">Name: {{userdata.userName}}</p>
        <p class="text-gray-600">Email: {{userdata.email}}</p>
        <p class="text-gray-600">Phone: {{userdata.number}}</p>
        <p class="text-gray-600">AddressLine1: {{userdata.address1}}</p>
        <p class="text-gray-600">AddressLine2: {{userdata.address2}}</p>
        <p class="text-gray-600">City: {{userdata.city}}</p>
        <p class="text-gray-600">State: {{userdata.state}}</p>
        <p class="text-gray-600">Country: {{userdata.country}}</p>
        <p class="text-gray-600">Pincode: {{userdata.pincode}}</p>
         <p class="text-gray-600">Landmark: {{userdata.landmark}}</p>
      </div>
      {{/if}}

      <!-- Order Summary -->
      <div class="bg-gray-50 p-4 rounded-lg shadow-sm">
        <h3 class="text-lg font-semibold text-gray-700">Order Summary</h3>
        <p class="text-gray-600">Order Date: {{orderDate}}</p>
        <p class="text-gray-600">Total Items: {{orderCount}}</p>
        <p class="text-gray-600 font-semibold text-lg">Total Price: RS.{{totalAmount}}</p>
      </div>
    </div>

    <!-- Product List -->
    <div class="mb-6">
      <h3 class="text-xl font-semibold text-gray-700 mb-4">Products in Order</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- Product Card (Repeat this for each product) -->
        <div class="bg-white shadow-sm rounded-lg p-4 border border-gray-200">
          <div class="flex items-center mb-4">
            <img src="https://via.placeholder.com/80" alt="Product Image" class="w-20 h-20 object-cover rounded-md">
            <div class="ml-4">
              <p class="font-semibold text-gray-800">Product Name</p>
              <p class="text-gray-500">Color: Black</p>
              <p class="text-gray-500">Quantity: 1</p>
            </div>
          </div>
          <p class="text-gray-600 font-semibold">Price: $100.00</p>
          <p class="text-gray-600 font-semibold">Total: $100.00</p>
        </div>
        <!-- Repeat similar cards for more products -->
      </div>
    </div>

    <!-- Order Tracking and Status Update -->
    <div class="mb-6">
      <h3 class="text-xl font-semibold text-gray-700 mb-4">Order Status</h3>
      <div class="flex flex-wrap gap-4">
        <button onclick="updateStatus('shipped')" class="status-btn bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded-lg">
          Shipped
        </button>
        <button onclick="updateStatus('out-for-delivery')" class="status-btn bg-yellow-500 hover:bg-yellow-600 text-white font-semibold px-4 py-2 rounded-lg">
          Out for Delivery
        </button>
        <button onclick="updateStatus('delivered')" class="status-btn bg-purple-500 hover:bg-purple-600 text-white font-semibold px-4 py-2 rounded-lg">
          Delivered
        </button>
      </div>
    </div>
  </div>

  <!-- SweetAlert and Status Update Script -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    function updateStatus(status) {
      Swal.fire({
        title: 'Are you sure?',
        text: `Do you want to mark this order as "${status}"?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, update it!'
      }).then((result) => {
        if (result.isConfirmed) {
          // Replace with actual status update logic here
          Swal.fire(
            'Updated!',
            `Order has been marked as "${status}".`,
            'success'
          );
        }
      });
    }
  </script>
</body>