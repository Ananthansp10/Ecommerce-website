<body class="bg-gray-100 p-4">

  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Admin - Order List</h1>
    <p class="text-gray-600 mt-3 ml-3">Manage all orders below.</p>
  </div>

  <!-- Order List Table -->
  <div class="bg-white shadow-md rounded-lg p-6">
    <table class="w-full border-collapse border border-gray-200">
      <thead>
        <tr class="bg-gray-200">
          <th class="py-3 px-4 text-left text-gray-600 font-semibold">SI NO:</th>
          <th class="py-3 px-4 text-left text-gray-600 font-semibold">Customer</th>
          <th class="py-3 px-4 text-left text-gray-600 font-semibold">Order Date</th>
          <th class="py-3 px-4 text-left text-gray-600 font-semibold">Status</th>
          <th class="py-3 px-4 text-left text-gray-600 font-semibold">Total</th>
          <th class="py-3 px-4 text-center text-gray-600 font-semibold">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr class="border-t border-gray-200 hover:bg-gray-100">
          <td class="py-4 px-4 text-gray-800">{{this.key}}</td>
          <td class="py-4 px-4 text-gray-800">{{this.userName}}</td>
          <td class="py-4 px-4 text-gray-800">{{this.orderDate}}</td>
          <td class="py-4 px-4 text-green-600 font-semibold">{{this.orderStatus}}</td>
          <td class="py-4 px-4 text-gray-800">RS. {{this.totalPrice}}</td>
          <td class="py-4 px-4 text-center">
            <button onclick="viewOrderDetails('{{this.orderId}}')" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded-lg">
              View Details
            </button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- SweetAlert Script -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    function viewOrderDetails(orderId) {
     location.href=`/admin/orderview/${orderId}`
    }
  </script>
</body>