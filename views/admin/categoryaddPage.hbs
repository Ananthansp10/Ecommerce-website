<div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6 mt-9">
  <h2 class="text-2xl font-semibold text-gray-700 mb-6">Add New Category</h2>

  <!-- Form Tag -->
  <form id="category-form" action="/admin/addcategory" method="post" enctype="multipart/form-data">
    <!-- Category Name Input -->
    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-2" for="category-name">Category Name</label>
      <input 
        type="text" 
        id="category-name" 
        name="categoryName" 
        placeholder="Enter category name"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <!-- Image Upload -->
    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-2" for="category-image">Upload Image</label>
      <input 
        type="file" 
        id="category-image" 
        name="images"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:bg-blue-50 file:text-blue-600 hover:file:bg-blue-100"
        onchange="previewImage(event)" <!-- This will trigger the image preview -->
    </div>

    <!-- Image Preview -->
    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-2">Image Preview</label>
      <img id="image-preview" class="w-100 h-48 object-cover rounded-lg border border-gray-300" src="" alt="" />
    </div>

    <!-- Submit Button -->
    <div class="mt-6">
      <button
        type="submit"
        class="w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
      >
        Add Category
      </button>
    </div>
  </form>
</div>

<!-- Script for Image Preview -->
<script>
  function previewImage(event) {
    const input = event.target;
    const preview = document.getElementById('image-preview');
    
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      
      reader.onload = function(e) {
        preview.src = e.target.result; // Set the image preview to the uploaded image
      }
      
      reader.readAsDataURL(input.files[0]); // Convert the image file to a data URL
    } else {
      preview.src = ''; // If no file, reset the image preview
    }
  }
</script>
