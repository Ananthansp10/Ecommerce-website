<section>
    <div class="banner-section">
        <img src="/images/ecomerce site banner.jpg" alt="">
    </div>
    <div class="heading font-bold text-2xl text-black text-center mt-7 mb-5">
        <h3>Best Seller</h3>
    </div>
    <div class="container mx-auto p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 justify-center">
          {{#each products}}
            <div class="max-w-xs bg-gray-200 shadow-md rounded-lg overflow-hidden mb-5 mx-auto" onclick="viewproduct('{{this._id}}')">
                <!-- Product Image -->
                <div class="w-full h-25">
                    <img class="w-100 h-full object-cover text-center" src="{{this.images.[0]}}" alt="Product Image">
                </div>
                <!-- Product Details -->
                <div class="p-4">
                    <!-- Product Name -->
                    <h2 class="text-lg font-semibold text-gray-800">{{this.name}}</h2>
                    <!-- Product Description -->
                    <p class="text-gray-600 text-sm mt-1">
                        {{this.description}}
                    </p>
                    <!-- Price -->
                    <div class="mt-3">
                        <span class="text-gray-700 font-bold">{{this.price}}</span>
                    </div>
                    <!-- Add to Cart and Buy Now Buttons -->
                    <div class="mt-4 flex items-center justify-between">
                        <button class="bg-indigo-600 text-white py-1 px-3 rounded-md text-xs hover:bg-indigo-500 focus:outline-none">
                            Add to Cart
                        </button>
                        <button class="bg-green-600 text-white py-1 px-3 rounded-md text-xs hover:bg-green-500 focus:outline-none">
                            Buy Now
                        </button>
                    </div>
                    <!-- Wishlist Icon -->
                    <div class="mt-2 flex justify-end">
                        <button class="text-gray-500 hover:text-red-500">
                            <i class="fa-solid fa-heart"></i> <!-- Wishlist Icon -->
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Peoples Choice -->
    <div class="font-bold text-2xl text-black text-center mt-7 mb-5">
        <h3>Peoples Choice</h3>
    </div>
    <div class="container mx-auto p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 justify-center">
          {{#each products}}
            <div class="max-w-xs bg-gray-300 shadow-md rounded-lg overflow-hidden mb-5 mx-auto" onclick="viewproduct('{{this._id}}')">
                <!-- Product Image -->
                <div class="w-full h-25">
                    <img class="w-100 h-full object-cover text-center" src="{{this.images.[0]}}" alt="Product Image">
                </div>
                <!-- Product Details -->
                <div class="p-4">
                    <!-- Product Name -->
                    <h2 class="text-lg font-semibold text-gray-800">{{this.name}}</h2>
                    <!-- Product Description -->
                    <p class="text-gray-600 text-sm mt-1">
                       {{this.description}}
                    </p>
                    <!-- Price -->
                    <div class="mt-3">
                        <span class="text-gray-700 font-bold">{{this.price}}</span>
                    </div>
                    <!-- Add to Cart and Buy Now Buttons -->
                    <div class="mt-4 flex items-center justify-between">
                        <button class="bg-indigo-600 text-white py-1 px-3 rounded-md text-xs hover:bg-indigo-500 focus:outline-none">
                            Add to Cart
                        </button>
                        <button class="bg-green-600 text-white py-1 px-3 rounded-md text-xs hover:bg-green-500 focus:outline-none">
                            Buy Now
                        </button>
                    </div>
                    <!-- Wishlist Icon -->
                    <div class="mt-2 flex justify-end">
                        <button class="text-gray-500 hover:text-red-500">
                            <i class="fa-solid fa-heart"></i> <!-- Wishlist Icon -->
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Slider section -->
    <div class="heading">
        <h3 class="font-bold text-black text-center text-2xl">Sponsers</h3>
    </div>
    <div class="relative w-full max-w-4xl mx-auto overflow-hidden rounded-lg mt-4 mb-10 bg-gray-300">
        <!-- Slider container -->
        <div id="slider" class="flex transition-transform duration-700 ease-in-out">
            <!-- Slide 1 -->
            <div class="w-full h-25 flex flex-shrink-0 items-center justify-center">
                <img class="w-300 h-full object-cover" src="/images/dhoni image.webp" alt="Slide 1">
            </div>
            <!-- Slide 2 -->
            <div class="w-full h-25 flex flex-shrink-0 items-center justify-center">
                <img class="w-300 h-full object-cover" src="/images/virat kohli.jpg" alt="Slide 2">
            </div>
            <!-- Slide 3 -->
            <div class="w-full h-25 flex flex-shrink-0 items-center justify-center">
                <img class="w-300 h-full object-cover" src="/images/dilquer.jpg" alt="Slide 3">
            </div>
        </div>

        <!-- Navigation buttons -->
        <button id="prev" class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-gray-800 text-white px-3 py-2 rounded-full hover:bg-gray-700">
            <i class="fa-solid fa-chevron-left"></i>
        </button>
        <button id="next" class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-gray-800 text-white px-3 py-2 rounded-full hover:bg-gray-700">
            <i class="fa-solid fa-chevron-right"></i>
        </button>
    </div>
</section>

<script>
  const slider = document.getElementById('slider');
  const nextButton = document.getElementById('next');
  const prevButton = document.getElementById('prev');

  let index = 0;
  const totalSlides = slider.children.length;

  nextButton.addEventListener('click', () => {
    if (index < totalSlides - 1) {
      index++;
    } else {
      index = 0; // Loop back to the first slide
    }
    slider.style.transform = `translateX(-${index * 100}%)`;
  });

  prevButton.addEventListener('click', () => {
    if (index > 0) {
      index--;
    } else {
      index = totalSlides - 1; // Loop back to the last slide
    }
    slider.style.transform = `translateX(-${index * 100}%)`;
  });

   function viewproduct(Id){
    window.location.href=`/product/productPage/${Id}`
  }
</script>