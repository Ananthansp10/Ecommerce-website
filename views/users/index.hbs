<section>
    <div class="banner-section">
        <img src="/images/ecomerce site banner.jpg" style="width: 100%; height: 500px;" alt="">
    </div>
    <div class="heading font-bold text-2xl text-black text-center mt-7 mb-5">
        <h3>Best Seller</h3>
    </div>
    <div class="container mx-auto p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 justify-center">
          {{#each products}}
            <div class="max-w-xs bg-gray-200 shadow-md rounded-lg overflow-hidden mb-5 mx-auto">
                <!-- Product Image -->
                <div class="w-full h-25">
                    <img class="w-100 h-full object-cover text-center" src="{{this.images.[0]}}" onclick="viewproduct('{{this._id}}')" alt="Product Image">
                </div>
                <!-- Product Details -->
                <div class="p-4">
                    <!-- Product Name -->
                    <h2 class="text-lg font-semibold text-gray-800">{{this.name}}</h2>
                    <!-- Product Description -->
                    <p class="text-gray-600 text-sm mt-1 truncate">
                        {{this.description}}
                    </p>
                    <!-- Price -->
                    {{#if this.offerPrice}}
                    <div class="flex items-center space-x-2 mt-3">
                    <span class="text-red-600 text-md font-bold">₹{{this.offerPrice}}</span>
                    <span class="text-gray-500 line-through text-sm">₹{{this.price}}</span>
                    </div>
                    {{else}}
                    <div class="mt-3">
                    <span class="text-blue-800 text-md font-bold">₹{{this.price}}</span>
                    </div>
                    {{/if}}
                    <!-- Add to Cart and Buy Now Buttons -->
                    <div class="mt-4 flex items-center justify-between">
                      {{#if this.isOutOfStock}}
                        <button class="bg-gray-400 text-white py-1 px-3 rounded-md text-xs hover:bg-gray-400 focus:outline-none  cursor-not-allowed">
                            Add to Cart
                        </button>
                      {{else}}
                        <button onclick="addToCart('{{this._id}}')" class="bg-indigo-600 text-white py-1 px-3 rounded-md text-xs hover:bg-indigo-500 focus:outline-none">
                            Add to Cart
                        </button>
                        {{/if}}
                        <button class="bg-green-600 text-white py-1 px-3 rounded-md text-xs hover:bg-green-500 focus:outline-none">
                            Buy Now
                        </button>
                    </div>
                    <!-- Wishlist Icon -->
                    <div class="mt-2 flex justify-end">
                        <button class="text-gray-500 hover:text-red-500">
                            {{#if this.isOnWishList}}
                            <i class="fa-solid fa-heart text-red-500" onclick="removeFromWish('{{this._id}}')"></i>
                            {{else}}
                            <i class="fa-solid fa-heart" onclick="addToWishList('{{this._id}}')" id="wishcount"></i>
                            {{/if}}
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Peoples Choice -->
