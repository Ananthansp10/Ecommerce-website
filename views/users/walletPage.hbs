<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>User Wallet</title>
</head>
<body class="bg-gray-100 font-sans">
  <div class="min-h-screen flex flex-col items-center justify-start p-5">
    <!-- Wallet Balance Card -->
    <div class="w-full max-w-4xl bg-white rounded-lg shadow-lg p-6 mb-6">
      <h1 class="text-xl font-bold text-gray-800">My Wallet</h1>
      <div class="flex items-center justify-between mt-4">
        <div>
          <h2 class="text-3xl font-extrabold text-green-500">{{#if walletAmount}}₹ {{walletAmount}}{{else}}₹0{{/if}}</h2>
          <p class="text-gray-500">Available Balance</p>
        </div>
        {{!-- <div class="space-x-4">
          <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
            Add Funds
          </button>
          <button class="bg-purple-500 text-white px-4 py-2 rounded-lg hover:bg-purple-600 transition">
            Make Payment
          </button>
        </div> --}}
      </div>
    </div>

    <!-- Transaction History -->
    <div class="w-full max-w-4xl bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-lg font-semibold text-gray-800 mb-4">Transaction History</h2>
      <table class="w-full border-collapse">
        <thead>
          <tr class="bg-gray-200 text-gray-600 uppercase text-sm">
            <th class="py-3 px-4 text-left">Date</th>
            <th class="py-3 px-4 text-left">Description</th>
            <th class="py-3 px-4 text-right">Type</th>
            <th class="py-3 px-4 text-right">Amount</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr class="hover:bg-gray-100 transition">
            <td class="py-3 px-4 text-gray-700">{{this.date}}</td>
            <td class="py-3 px-4 text-gray-700">{{this.description}}</td>
            <td class="py-3 px-4 text-right text-red-500">{{this.amountType}}</td>
            <td class="py-3 px-4 text-right text-red-500">₹{{this.amount}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
