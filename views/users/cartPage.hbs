<div class="container mx-auto px-4 py-8">
    <!-- Cart Section -->
    <div class="flex flex-col lg:flex-row justify-between space-y-6 lg:space-y-0 lg:space-x-8">
        <!-- Product List -->
        <div class="lg:w-3/4 bg-white p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold mb-6">Your Cart</h2>

            <!-- Cart Item -->
            <div class="flex justify-between items-center border-b pb-4 mb-4">
                <img src="/images/phone1.jpg" alt="Product Image" class="w-24 h-24 object-cover rounded-lg">
                <div class="flex-1 ml-4">
                    <h3 class="text-lg font-semibold">Product Name</h3>
                    <p class="text-gray-600">Category: Mobile</p>
                    <div class="flex items-center mt-2">
                        <!-- Quantity Controls -->
                        <div class="flex items-center">
                            <button class="px-3 py-2 bg-gray-200 hover:bg-gray-300 text-gray-600 rounded-l-lg">
                                <i class="fas fa-arrow-down"></i>
                            </button>
                            <input type="number" value="1" min="1" class="w-12 text-center p-2 border-t border-b">
                            <button class="px-3 py-2 bg-gray-200 hover:bg-gray-300 text-gray-600 rounded-r-lg">
                                <i class="fas fa-arrow-up"></i>
                            </button>
                        </div>
                        <span class="text-lg ml-4">$99.99</span>
                    </div>
                </div>
                <button class="text-red-500 hover:text-red-700">
                    <i class="fas fa-trash"></i>
                </button>
            </div>

            <!-- Another Cart Item -->
            <div class="flex justify-between items-center border-b pb-4 mb-4">
                <img src="/images/phone2.jpg" alt="Product Image" class="w-24 h-24 object-cover rounded-lg">
                <div class="flex-1 ml-4">
                    <h3 class="text-lg font-semibold">Product Name</h3>
                    <p class="text-gray-600">Category: Accessories</p>
                    <div class="flex items-center mt-2">
                        <!-- Quantity Controls -->
                        <div class="flex items-center">
                            <button class="px-3 py-2 bg-gray-200 hover:bg-gray-300 text-gray-600 rounded-l-lg">
                                <i class="fas fa-arrow-down"></i>
                            </button>
                            <input type="number" value="1" min="1" class="w-12 text-center p-2 border-t border-b">
                            <button class="px-3 py-2 bg-gray-200 hover:bg-gray-300 text-gray-600 rounded-r-lg">
                                <i class="fas fa-arrow-up"></i>
                            </button>
                        </div>
                        <span class="text-lg ml-4">$49.99</span>
                    </div>
                </div>
                <button class="text-red-500 hover:text-red-700">
                    <i class="fas fa-trash"></i>
                </button>
            </div>

            <div class="text-right mt-4">
                <a class="text-blue-500 hover:underline" href="/">Continue Shopping</a>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="lg:w-1/4 bg-gray-100 p-6 rounded-lg shadow-lg">
            <h2 class="text-xl font-semibold mb-6">Order Summary</h2>
            <div class="flex justify-between mb-2">
                <span class="text-gray-700">Subtotal</span>
                <span class="text-gray-700">$149.98</span>
            </div>
            <div class="flex justify-between mb-2">
                <span class="text-gray-700">Shipping</span>
                <span class="text-gray-700">$10.00</span>
            </div>
            <div class="flex justify-between mb-4">
                <span class="text-gray-700">Tax</span>
                <span class="text-gray-700">$5.00</span>
            </div>
            <hr class="mb-4">
            <div class="flex justify-between text-lg font-semibold mb-6">
                <span>Total</span>
                <span>$164.98</span>
            </div>
            <button class="bg-blue-500 text-white py-2 px-4 w-full rounded-lg hover:bg-blue-600 transition-all">Proceed to Checkout</button>
        </div>
    </div>
</div>
