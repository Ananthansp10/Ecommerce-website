<script>

  function googleauthenticate(){
   window.location.href='/users/auth/google';
  }

 function goToLogin(e) {
  e.preventDefault();
  let isValid = true;

  const email = document.getElementById("email").value.trim();
  const password = document.getElementById("password").value.trim();
  const emailError = document.getElementById("emailError");
  const passwordError = document.getElementById("passwordError");

  // Email validation
  if (!email) {
    emailError.innerText = "This field is required! Enter email.";
    emailError.classList.remove("hidden"); 
    isValid = false;
  } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
    emailError.innerText = "Invalid email format.";
    emailError.classList.remove("hidden");
    isValid = false;
  } else {
    emailError.classList.add("hidden");
  }

  // Password validation
  if (!password) {
    passwordError.innerText = "This field is required! Enter password.";
    passwordError.classList.remove("hidden");
    isValid = false;
  } else if (
    password.length < 6 ||
    !/[A-Z]/.test(password) ||
    !/[0-9]/.test(password) ||
    !/[!@#$%^&*(),.?":{}|<>]/.test(password)
  ) {
    passwordError.innerText =
      "Password must be at least 6 characters long, with one uppercase letter, one number, and one special character.";
    passwordError.classList.remove("hidden");
    isValid = false;
  } else {
    passwordError.classList.add("hidden"); 
  }

  if (isValid) {
    fetch('/users/login',{
      method:"POST",
       headers: {
      "Content-Type": "application/json"
      },
      body:JSON.stringify({
        email:email,
        password:password
      })
    }).then((response)=>response.json()).then((response)=>{
      if(response.status){
        Swal.fire({
      icon: 'success',
      title: 'Login Successful!',
      text: 'You have successfully logged in.',
      confirmButtonText: 'OK',
    }).then(()=>{
      location.href='/'
    })
    }else{
      Swal.fire({
      icon: 'error',
      title:response.message,
      confirmButtonText: 'Try Again'
    }).then(()=>{
      location.reload();
    })
    }
    })
  }
}


</script>
