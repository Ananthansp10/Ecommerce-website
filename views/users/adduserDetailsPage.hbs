<body class="bg-gray-100 py-12">

  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-8 mt-9 mb-9">
    <h1 class="text-2xl font-semibold text-gray-700 mb-6 text-center">Add User Details</h1>
    
    <form action="/users/adduserdetails" method="post" enctype="multipart/form-data" class="space-y-6">
      
      <!-- Name -->
      <div>
        <label for="name" class="block text-sm font-medium text-gray-600">Name</label>
        <input type="text" id="name" name="name" class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200 focus:outline-none" required>
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-600">Email</label>
        <input type="email" id="email" name="email" value="{{user.email}}" readonly class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200 focus:outline-none" required>
      </div>

      <!-- Phone Number -->
      <div>
        <label for="phone" class="block text-sm font-medium text-gray-600">Phone Number</label>
        <input type="tel" id="phone" name="phone" class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200 focus:outline-none" required>
      </div>

      <!-- Gender -->
      <div>
        <label class="block text-sm font-medium text-gray-600">Gender</label>
        <div class="flex items-center mt-1 space-x-6">
          <label class="flex items-center">
            <input type="radio" name="gender" value="male" class="text-blue-600 focus:ring-blue-500" required>
            <span class="ml-2 text-gray-700">Male</span>
          </label>
          <label class="flex items-center">
            <input type="radio" name="gender" value="female" class="text-blue-600 focus:ring-blue-500">
            <span class="ml-2 text-gray-700">Female</span>
          </label>
          <label class="flex items-center">
            <input type="radio" name="gender" value="other" class="text-blue-600 focus:ring-blue-500">
            <span class="ml-2 text-gray-700">Other</span>
          </label>
        </div>
      </div>

      <!-- Profile Photo -->
      <div>
        <label for="profile-photo" class="block text-sm font-medium text-gray-600">Profile Photo</label>
        <input type="file" id="profile-photo" name="image" accept="image/*" onchange="previewImage(event)" class="mt-1 w-full text-gray-700 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200 focus:outline-none">
        
        <!-- Image Preview -->
        <div class="mt-4">
          <img id="image-preview" class="w-32 h-32 rounded-full mx-auto object-cover border border-gray-300" src="https://via.placeholder.com/100" alt="Profile Photo Preview">
        </div>
      </div>

      <!-- Submit Button -->
      <div class="pt-4">
        <button type="submit" class="w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">
          Save User Details
        </button>
      </div>

    </form>
  </div>

  <script>
    function previewImage(event) {
      const imagePreview = document.getElementById('image-preview');
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = () => {
          imagePreview.src = reader.result;
        };
        reader.readAsDataURL(file);
      }
    }
  </script>

</body>